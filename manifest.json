{
  "name": "__MSG_appName__",
  "version": "1",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "default_locale": "en",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    {"fileSystem": ["write"]},
    "contextMenus"
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "intents": {
    "http://webintents.org/view": [
      {
        "title": "Markdown and Mathjax Editor",
        "type": ["text/*"]
      }
    ]
  }
}
